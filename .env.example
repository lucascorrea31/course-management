# MongoDB
MONGODB_URI=mongodb://localhost:27017/course-management

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Kiwify OAuth 2.0 API
KIWIFY_ACCOUNT_ID=your-kiwify-account-id
KIWIFY_CLIENT_ID=your-kiwify-client-id
KIWIFY_CLIENT_SECRET=your-kiwify-client-secret

# Hotmart OAuth 2.0 API
# Get your credentials at: https://developers.hotmart.com/
# Option 1: Use the Basic token provided by Hotmart (recommended)
HOTMART_BASIC_AUTH=your-hotmart-basic-auth

# Option 2: Or use client_id and client_secret separately
# HOTMART_CLIENT_ID=your-hotmart-client-id
# HOTMART_CLIENT_SECRET=your-hotmart-client-secret

# Environment: production or sandbox
# Use sandbox for testing with sandbox credentials
HOTMART_ENV=sandbox

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Optional: Permanent invite link (if bot is not admin)
# Get this from: Group > Edit > Invite Links > Create Link
TELEGRAM_INVITE_LINK=https://t.me/+your-invite-link

# Sync API Key (for scheduled cron jobs)
# Generate with: openssl rand -base64 32
SYNC_API_KEY=your-sync-api-key-here
